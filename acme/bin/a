	9 plumber && echo "started plumber"

	cat ~/.config/acme/plumbing "$PLAN9/plumb/basic" | 9 9p write plumb/rules
fi

#if [ ! "$(pgrep fontsrv)" ]; then
#	9 fontsrv -m /mnt/font &
#fi

#9 acme -a -f /mnt/font/GoRegular/11a/font $@ &
9 acme -a $@ &
disown
